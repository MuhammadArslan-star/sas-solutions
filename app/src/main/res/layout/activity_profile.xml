<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/screen_bg">

    <RelativeLayout
        android:id="@+id/rlToolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:elevation="@dimen/_5sdp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/ic_baseline_back"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"/>


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/black"
            android:layout_centerInParent="true" />





    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rlProfile"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivUserImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:civ_border_color="@color/buttonColor"
                    app:civ_border_width="@dimen/_1sdp"
                    android:src="@drawable/user"/>



            </RelativeLayout>

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlProfile"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_18sdp"
                android:gravity="center_horizontal"
                android:text="@string/app_name"/>

            <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvUserName"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_14sdp"
                android:gravity="center_horizontal"
                android:text="sas_solution@gmail.com"/>


            <LinearLayout
                android:layout_below="@+id/tvUserEmail"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">




                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_8sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rlSetting"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginBottom="@dimen/_2sdp">

                            <ImageView
                                android:id="@+id/ivSetting"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/ic_baseline_settings"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_12sdp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/settings"
                                android:textSize="@dimen/_12sdp"
                                android:fontFamily="@font/montserrat_medium"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@id/ivSetting"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:textColor="@color/black"/>



                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:layout_alignParentEnd="true"
                                android:src="@drawable/icon_next"/>



                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/gry"
                                android:layout_alignParentBottom="true"/>
                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/rlRateUs"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginBottom="@dimen/_2sdp">

                            <ImageView
                                android:id="@+id/ivRateUs"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/ic_baseline_star_rate"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_12sdp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rate_us"
                                android:textSize="@dimen/_12sdp"
                                android:fontFamily="@font/montserrat_medium"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@id/ivRateUs"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:textColor="@color/black"/>



                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:layout_alignParentEnd="true"
                                android:src="@drawable/icon_next"/>



                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/gry"
                                android:layout_alignParentBottom="true"/>
                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/rlShareApp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginBottom="@dimen/_2sdp">

                            <ImageView
                                android:id="@+id/ivShareApp"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/ic_baseline_share"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_12sdp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/share_app"
                                android:textSize="@dimen/_12sdp"
                                android:fontFamily="@font/montserrat_medium"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@id/ivShareApp"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:textColor="@color/black"/>



                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:layout_alignParentEnd="true"
                                android:src="@drawable/icon_next"/>




                        </RelativeLayout>




                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_8sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginBottom="@dimen/_2sdp">

                            <ImageView
                                android:id="@+id/ivLogout"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/ic_baseline_logout"
                                android:rotation="180"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_12sdp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/logout"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@id/ivLogout"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:textColor="@color/black"/>






                        </RelativeLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>






        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>



</LinearLayout>